<Window
    x:Class="StatisticsMethodsOfDataProcessing.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StatisticsMethodsOfDataProcessing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Grid>
        <TabControl
            Margin="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TabItem Header="Preprocessing">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Feature selection">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Classifiers">
                <DockPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}}" Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TabControl}}}">
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Open file" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="Train" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Execute" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="120"
                        Margin="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
